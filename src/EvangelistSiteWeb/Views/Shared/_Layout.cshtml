@inject Microsoft.Extensions.Options.IOptions<PersonaliseOptions> opt
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - from @opt.Value.Name</title>

    <!--Fav icons - generate your own at http://realfavicongenerator.net -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/images/favicon/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/images/favicon/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/images/favicon/manifest.json">
    <link rel="mask-icon" href="/images/favicon/safari-pinned-tab.svg" color="#000000">
    <link rel="shortcut icon" href="/images/favicon/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="MartinK.me">
    <meta name="application-name" content="MartinK.me">
    <meta name="msapplication-config" content="/images/favicon/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <!--Fonts. Choose your own at https://fonts.google.com and edit the 'body' rule in site.css to reference it. Do not use the Eurostile fonts. They are personally licensed for use only by Martin Kearn -->
    @*<link href="https://fonts.googleapis.com/css?family=Passion+One" rel="stylesheet">*@
    <link href="~/css/googlefonts-lato-400-700-900.min.css" rel="stylesheet" />
    @*<link href="~/css/EurostileLTStd-BoldEx2.css" rel="stylesheet" />
    <link href="~/css/EurostileLTStd-BoldCn.css" rel="stylesheet" />*@

    <!--CSS-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />

    @RenderSection("head", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">@opt.Value.DomainName.ToUpper()</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Speaking" asp-action="Index">Speaking</a></li>
                    <li><a asp-controller="Links" asp-action="Index">Links</a></li>
                    <li><a asp-controller="Articles" asp-action="Index">Articles</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right  hidden-xs">
                    <li><a href="@opt.Value.TwitterUrl"><i class="fa fa-twitter fa-lg" aria-hidden="true"></i></a></li>
                    <li><a href="@opt.Value.LinkedInUrl"><i class="fa fa-linkedin fa-lg" aria-hidden="true"></i></a></li>
                    <li><a href="@opt.Value.SkypeHandle"><i class="fa fa-skype fa-lg" aria-hidden="true"></i></a></li>
                    <li><a href="@opt.Value.GitHubUrl"><i class="fa fa-github fa-lg" aria-hidden="true"></i></a></li>
                    <li><a href="@opt.Value.StackOverflowUrl"><i class="fa fa-stack-overflow fa-lg" aria-hidden="true"></i></a></li>
                    <li><a href="@string.Format("mailto:{0}?Subject=Enquiry%20from%20{1}", opt.Value.Email, opt.Value.DomainName)"><i class="fa fa-envelope-o fa-lg" aria-hidden="true"></i></a></li>
                </ul>
                @*@await Html.PartialAsync("_LoginPartial")*@
            </div>
        </div>
    </div>

    @RenderBody()

    <footer class="footer container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <p>Don't be a stranger...</p>
                    <a href="@opt.Value.TwitterUrl"><i class="fa fa-twitter fa-2x footer-icon" aria-hidden="true"></i></a>
                    <a href="@opt.Value.LinkedInUrl"><i class="fa fa-linkedin fa-2x footer-icon" aria-hidden="true"></i></a>
                    <a href="@opt.Value.SkypeHandle"><i class="fa fa-skype fa-2x footer-icon" aria-hidden="true"></i></a>
                    <a href="@opt.Value.GitHubUrl"><i class="fa fa-github fa-2x footer-icon" aria-hidden="true"></i></a>
                    <a href="@opt.Value.StackOverflowUrl"><i class="fa fa-stack-overflow fa-2x footer-icon" aria-hidden="true"></i></a>
                    <a href="@string.Format("mailto:{0}?Subject=Enquiry%20from%20{1}", opt.Value.Email, opt.Value.DomainName)"><i class="fa fa-envelope-o fa-2x footer-icon" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" defer></script>

    <script defer>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
        ga('create', '@opt.Value.GoogleAnalyticsID', 'auto');
        ga('send', 'pageview');
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
