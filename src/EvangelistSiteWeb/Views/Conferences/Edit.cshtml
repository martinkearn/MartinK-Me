@model EvangelistSiteWeb.Models.ConferencesViewModels.EditViewModel

@{
    Layout = "_LayoutAdmin";
}

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Edit</h2>

                <form asp-action="Edit">
                    <div class="form-horizontal">
                        <h4>Conference</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Conference.Id" />
                        <div class="form-group">
                            <label asp-for="Conference.ConferenceTitle" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Conference.ConferenceTitle" class="form-control" />
                                <span asp-validation-for="Conference.ConferenceTitle" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Conference.Date" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Conference.Date" class="form-control" />
                                <small>Format: YYYY-MM-DD</small>
                                <span asp-validation-for="Conference.Date" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Conference.ExternalUrl" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Conference.ExternalUrl" class="form-control" />
                                <span asp-validation-for="Conference.ExternalUrl" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Talks</label>
                            <div class="col-md-10">
                                @foreach (var t in Model.Talks)
                                {
                                    <input type="checkbox" id="@t.Value" name="TalkIds" value="@t.Value" checked="@t.Selected" />
                                    <small><label for="@t.Value">@t.Text</label></small>
                                    <br />
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </form>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FA icons Modal -->
@Html.Partial("_FAModalPartial")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

