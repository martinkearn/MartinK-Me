name: Obtain Subscription Id

on:
  workflow_dispatch:
  push:
    branches:
    - 101-obtain-subscription

jobs:
  GetId:
    secrets:
      azure-credentials: ${{ secrets.AZURE_CREDENTIALS_MKNETDEV }}
      azure-subscription: ${{ secrets.AZURE_SUBSCRIPTION }}
    runs-on: ubuntu-latest
    steps:
    - name: azure-login
      uses: azure/login@v1
      with:
        creds: ${{ secrets.azure-credentials }}
