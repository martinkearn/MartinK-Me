@inject Microsoft.Extensions.Options.IOptions<PersonaliseOptions> opt
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - from @opt.Value.Name</title>

    <!--Fav icons - generate your own at http://realfavicongenerator.net -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/images/favicon/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/images/favicon/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/images/favicon/manifest.json">
    <link rel="mask-icon" href="/images/favicon/safari-pinned-tab.svg" color="#000000">
    <link rel="shortcut icon" href="/images/favicon/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="@opt.Value.DomainName">
    <meta name="application-name" content="@opt.Value.DomainName">
    <meta name="msapplication-config" content="/images/favicon/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <!--Metadata-->
    <link rel="canonical" href="http://@Context.Request.Host@Context.Request.Path" />
    @RenderSection("metadata", required: false)

    <!--CSS-->
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/EurostileLTStd-BoldEx2.css" />
        <link rel="stylesheet" href="~/css/EurostileLTStd-BoldCn.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/mk.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    @RenderSection("head", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">@opt.Value.DomainName</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="speaking" asp-action="Index">Speaking</a></li>
                    <li><a asp-controller="articles" asp-action="Index">Articles</a></li>
                    <li><a asp-controller="search" asp-action="Index"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right  hidden-xs">
                    @if (!string.IsNullOrEmpty(opt.Value.YouTube))
                    {
                        <li><a href="@opt.Value.YouTube"><i class="fa fa-youtube fa-lg" aria-hidden="true"></i></a></li>
                    }
                    @if (!string.IsNullOrEmpty(opt.Value.TwitterUrl))
                    {
                        <li><a href="@opt.Value.TwitterUrl"><i class="fa fa-twitter fa-lg" aria-hidden="true"></i></a></li>
                    }
                    @if (!string.IsNullOrEmpty(opt.Value.LinkedInUrl))
                    {
                        <li><a href="@opt.Value.LinkedInUrl"><i class="fa fa-linkedin fa-lg" aria-hidden="true"></i></a></li>
                    }
                    @if (!string.IsNullOrEmpty(opt.Value.SkypeHandle))
                    {
                        <li><a href="@opt.Value.SkypeHandle"><i class="fa fa-skype fa-lg" aria-hidden="true"></i></a></li>
                    }
                    @if (!string.IsNullOrEmpty(opt.Value.GitHubUrl))
                    {
                        <li><a href="@opt.Value.GitHubUrl"><i class="fa fa-github fa-lg" aria-hidden="true"></i></a></li>
                    }
                    @if (!string.IsNullOrEmpty(opt.Value.StackOverflowUrl))
                    {
                        <li><a href="@opt.Value.StackOverflowUrl"><i class="fa fa-stack-overflow fa-lg" aria-hidden="true"></i></a></li>
                    }
                    @if (!string.IsNullOrEmpty(opt.Value.Email))
                    {
                        <li><a href="@string.Format("mailto:{0}?Subject=Enquiry%20from%20{1}", opt.Value.Email, opt.Value.DomainName)"><i class="fa fa-envelope-o fa-lg footer-icon" aria-hidden="true"></i></a></li>
                    }
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

    @RenderSection("footer", required: false)
    <footer class="footer container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <p>Don't be a stranger...</p>
                    @if (!string.IsNullOrEmpty(opt.Value.YouTube))
                    {<a href="@opt.Value.YouTube"><i class="fa fa-youtube fa-lg footer-icon" aria-hidden="true"></i></a>}
                    @if (!string.IsNullOrEmpty(opt.Value.TwitterUrl))
                    {<a href="@opt.Value.TwitterUrl"><i class="fa fa-twitter fa-lg footer-icon" aria-hidden="true"></i></a>}
                    @if (!string.IsNullOrEmpty(opt.Value.LinkedInUrl))
                    {<a href="@opt.Value.LinkedInUrl"><i class="fa fa-linkedin fa-lg footer-icon" aria-hidden="true"></i></a>}
                    @if (!string.IsNullOrEmpty(opt.Value.SkypeHandle))
                    {<a href="@opt.Value.SkypeHandle"><i class="fa fa-skype fa-lg footer-icon" aria-hidden="true"></i></a>}
                    @if (!string.IsNullOrEmpty(opt.Value.GitHubUrl))
                    {<a href="@opt.Value.GitHubUrl"><i class="fa fa-github fa-lg footer-icon" aria-hidden="true"></i></a>}
                    @if (!string.IsNullOrEmpty(opt.Value.StackOverflowUrl))
                    {<a href="@opt.Value.StackOverflowUrl"><i class="fa fa-stack-overflow fa-lg footer-icon" aria-hidden="true"></i></a>}
                    @if (!string.IsNullOrEmpty(opt.Value.Email))
                    {<a href="@string.Format("mailto:{0}?Subject=Enquiry%20from%20{1}", opt.Value.Email, opt.Value.DomainName)"><i class="fa fa-envelope-o fa-lg footer-icon" aria-hidden="true"></i></a>}
                </div>
            </div>
        </div>
    </footer>

    <!--JS-->
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/site.min.js" defer></script>
    </environment>

    <script defer>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
        ga('create', '@opt.Value.GoogleAnalyticsID', 'auto');
        ga('send', 'pageview');
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
